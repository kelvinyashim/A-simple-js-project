<div class="col">
<button onclick="colorChange()" > Surprise </button>
</div>
<script>
var i = 0;
function colorChange(){
var color = ["red", "blue" , "green", "purple", "orange", "yellow"];
document.getElementsByTagName("body")[0].style.background = color[i++];

if (i > color.length - 1){
i = 0;}
}
</script>
